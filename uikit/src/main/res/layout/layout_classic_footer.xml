<?xml version="1.0" encoding="utf-8"?>
<com.hutao.ui.uikit.footerView.ClassicLoadMoreFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/load_more_footer_height_classic">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallTitle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tvLoadMore"
            android:indeterminateDrawable="@drawable/progressbar"/>

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tvLoadMore"
            android:background="@mipmap/qq_refresh_success" />

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="150dp"
            android:paddingRight="@dimen/_15dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="LoadMore"
            android:textSize="17sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
</com.hutao.ui.uikit.footerView.ClassicLoadMoreFooterView>